{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "debug",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "types": [
      "naive-ui/volar"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "postcss.config.cjs",
    "*.json",
    "src-tauri",
    ".cargo",
    ".vscode",
    "public"
  ],
  // "include": [
  //   "src/**/*.ts",
  //   "src/**/*.d.ts",
  //   "src/**/*.tsx",
  //   "src/**/*.vue",
  //   "src/**/**/*.vue",
  //   "src/**/**/*.ts",
  //   "src/**/**/**/*.ts",
  //   "src/**/**/**/*.vue",
  //   "src/*.vue",
  //   "src/*.ts",
  //   "tailwind.config.ts",
  //   "./vite.config.ts"
  // ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}